<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.yuntian.youth.widget.TitleBar
        android:id="@+id/dynamic_detail_title"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/green_main"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/dynamic_detail_headll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dynamic_detail_head"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/dynamic_detail_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:textColor="#000000"
                    android:textSize="60px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/dynamic_detail_content"
                android:layout_below="@+id/dynamic_detail_headll"
                android:layout_width="1100px"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:textSize="60px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/dynamic_detail_likell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dynamic_detail_iv_on"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:src="@mipmap/fold"/>

                <TextView
                    android:id="@+id/dynamic_detail_likenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="70px"/>

                <ImageView
                    android:id="@+id/dynamic_detail_iv_under"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="center"
                    android:src="@mipmap/unfold"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/dynamic_detail_photo"
                android:layout_width="1400px"
                android:layout_height="500px"
                android:layout_below="@+id/dynamic_detail_likell"
                android:layout_gravity="center"
                android:layout_marginTop="100px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="40px"
            android:id="@+id/dynamic_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-12"
            android:textSize="40px"/>

            <TextView
                android:id="@+id/dynamic_detail_location"
                android:layout_marginLeft="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300m"
                android:textSize="40px"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/dynamic_detail_ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="300"
        cube_ptr:ptr_duration_to_close_header="2000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <android.support.v7.widget.RecyclerView

            android:id="@+id/dynamic_detail_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"/>

    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/layout_dynamic_comment_et"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
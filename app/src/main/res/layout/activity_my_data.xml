<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yuntian.youth.widget.TitleBar
        android:id="@+id/my_data_title"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/green_main"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="100px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8a8a8a"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/my_information_btn_usernam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="60px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20px"
                android:text="用户名"
                android:textColor="#515151"
                android:textSize="70px"/>

            <TextView
                android:id="@+id/my_information_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:text="Sum"
                android:textSize="60px"
                android:layout_toLeftOf="@+id/my_information_data_v0"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/my_information_data_v0"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/you"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#8a8a8a"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/my_information_btn_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="60px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20px"
                android:text="性别"
                android:textColor="#515151"
                android:textSize="70px"/>

            <TextView
                android:id="@+id/my_information_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/my_information_data_v1"
                android:layout_marginRight="50px"
                android:text="男"
                android:textSize="60px"/>
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/my_information_data_v1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/you"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#8a8a8a"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/my_information_btn_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="60px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20px"
                android:text="生日"
                android:textColor="#515151"
                android:textSize="70px"/>

            <TextView
                android:id="@+id/my_information_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/my_information_data_v2"
                android:layout_marginRight="50px"
                android:text="20"
                android:textSize="60px"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/my_information_data_v2"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/you"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#8a8a8a"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_marginTop="200px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8a8a8a"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/my_information_save"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:padding="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="60px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8a8a8a"/>
</com.zhy.autolayout.AutoLinearLayout>